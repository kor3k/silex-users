{% extends "layout.html.twig" %}

{% block title %}
    {{ parent() }} - {{ 'user.register' | trans }}
{% endblock title %}

{% block header %}
    <h2 class="panel-title">{{ 'user.register' | trans }}</h2>
{% endblock header %}

{% block content %}

    {{ form_start( form , { 'action' : url( 'post_register_user' ) , 'method' : 'POST' , 'attr' : { 'role' : 'form' } } ) }}

    <div class="form-group">
        {{ form_label( form.email ) }}
        <div class="input-group">
            <div class="input-group-addon">
                <span class="glyphicon glyphicon-envelope"></span>
            </div>
            {{ form_widget( form.email , { 'attr' : { 'placeholder' : "Email" , 'class' : 'form-control' } } ) }}
        </div>
        {% if form_errors( form.email ) %}
            <div class="alert alert-danger">
                {{ form_errors( form.email ) }}
            </div>
        {% endif %}
    </div>

    <div class="form-group">
        {{ form_label( form.username ) }}
        <div class="input-group">
            <div class="input-group-addon">
                <span class="glyphicon glyphicon-user"></span>
            </div>
            {{ form_widget( form.username , { 'attr' : { 'placeholder' : 'user.username' , 'class' : 'form-control' } } ) }}
        </div>
        {% if form_errors( form.username ) %}
            <div class="alert alert-danger">
                {{ form_errors( form.username ) }}
            </div>
        {% endif %}
    </div>

    <div class="form-group">
        {{ form_label( form.password.first ) }}
        <div class="input-group">
            <div class="input-group-addon">
                <span class="glyphicon glyphicon-lock"></span>
            </div>
            {{ form_widget( form.password.first , { 'attr' : { 'class' : 'form-control' , 'placeholder' : "user.password" } } ) }}
        </div>
        {% if form_errors( form.password.first ) %}
            <div class="alert alert-danger">
                {{ form_errors( form.password.first ) }}
            </div>
        {% endif %}

        {{ form_label( form.password.second ) }}
        <div class="input-group">
            <div class="input-group-addon">
                <span class="glyphicon glyphicon-lock"></span>
            </div>
            {{ form_widget( form.password.second , { 'attr' : { 'class' : 'form-control' , 'placeholder' : "user.password2" } } ) }}
        </div>
    </div>

    {{ form_widget( form.submit , { 'attr' : { 'class' : 'btn btn-info' } } ) }}

    {{ form_end( form ) }}

{% endblock content %}
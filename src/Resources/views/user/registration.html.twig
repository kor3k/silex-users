{% extends "layout.html.twig" %}

{% block title %}
    {{ parent() }} - Register user
{% endblock title %}

{% block content %}

    {{ form_start( form , { 'action' : url( 'post_register_user' ) , 'method' : 'POST' , 'attr' : { 'role' : 'form' } } ) }}

    <div class="form-group">
        <span class="glyphicon glyphicon-envelope"></span>
        {{ form_label( form.email ) }}
        {{ form_widget( form.email , { 'attr' : { 'placeholder' : "enter email" , 'class' : 'form-control' } } ) }}
        {{ form_errors( form.email ) }}
    </div>

    <div class="form-group">
        <span class="glyphicon glyphicon-user"></span>
        {{ form_label( form.username ) }}
        {{ form_widget( form.username , { 'attr' : { 'placeholder' : "enter username" , 'class' : 'form-control' } } ) }}
        {{ form_errors( form.username ) }}
    </div>

    <div class="form-group">
        <span class="glyphicon glyphicon-lock"></span>
        {{ form_label( form.password.first ) }}
        {{ form_widget( form.password.first , { 'attr' : { 'class' : 'form-control' } } ) }}
        {{ form_errors( form.password.first ) }}
        <span class="glyphicon glyphicon-lock"></span>
        {{ form_label( form.password.second ) }}
        {{ form_widget( form.password.second , { 'attr' : { 'class' : 'form-control' } } ) }}
    </div>

    {{ form_widget( form.submit , { 'attr' : { 'class' : 'btn btn-primary' } } ) }}

    {{ form_end( form ) }}

{% endblock content %}
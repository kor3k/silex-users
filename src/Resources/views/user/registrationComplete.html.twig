{% extends "layout.html.twig" %}

{% block title %}
    {{ parent() }} - Registration complete
{% endblock title %}

{% block header %}
    <h2 class="panel-title">Registration complete</h2>
{% endblock header %}

{% block page %}

    <div class="panel panel-success grid-100 grid-parent">
        <div class="panel-heading">
            <h2 class="panel-title">{{ block( 'header' ) }}</h2>
        </div>

        <div class="panel-body">
            <div class="alert alert-success">
                Uživatel "{{ user.username }}" ( {{ user.email }} ) byl zaregistrován.
            </div>
        </div>

        <footer class="panel-footer" id="page-footer">
            {{ block( 'footer' ) }}
        </footer>
    </div>

{% endblock page %}
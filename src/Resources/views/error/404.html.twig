{% extends "layout.html.twig" %}

{% block title %}
    {{ parent() }} - Page not found {{ error.statusCode | default('') }}
{% endblock title %}

{% block content %}

    <div class="panel panel-danger grid-100 grid-parent">
        <div class="panel-heading">
            <h2 class="panel-title">Page not found {{ error.statusCode | default('') }}</h2>
        </div>

        <div class="panel-body">
                Page {{ app.request.uri }} was not found {{ error.statusCode | default('') }} {{ error.message | default('') }}
        </div>
    </div>


{% endblock content %}  